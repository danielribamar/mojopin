@using MojoPin.Frontend.Helpers
@using Umbraco.Web.Models
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "HeaderAndFooter.cshtml";
    var title = Model.Content.GetPropertyValue("contentTitle");
    var subtitle = Model.Content.GetPropertyValue<string>("contentSubtitle");

    var titleColor = Model.Content.GetPropertyValue("contentTitleColor");

    //var media = Umbraco.TypedMedia(Model.Content.GetPropertyValue<int>("contentHeaderImage")).GetCropUrl(1366, 768);
    var media = Umbraco.TypedMedia(Model.Content.GetPropertyValue<int>("contentHeaderImage")).Url;

}

<header class="intro-header" style="background-image: url('@media'); background-color: #@Model.Content.GetPropertyValue("contentHeaderColor")">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-5 col-md-12 col-md-offset-1">
                <div class="site-heading">
                    <h1 class="title" style="color: @titleColor">
                        @title
                        <span style="font: 100 20px/0.8 'Great Vibes', Helvetica, sans-serif; color: @titleColor">
                            by Filipa Galrão
                        </span>
                    </h1>
                    @if (!string.IsNullOrEmpty(subtitle))
                    {
                        <hr class="small" style="color: @titleColor">
                    }
                    <span class="subheading">@Html.Raw(subtitle)</span>
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>

</header>


@if (!MobileHelper.IsMobileDevice(Request.UserAgent))
{
    <div style="width: 15%; float: right; margin-left: 20px; margin-right: 10px; position: fixed; padding-top: 35px;z-index: -1">
        <div class="fb-page" data-href="https://www.facebook.com/filipagalrao" @*data-tabs="timeline"*@ data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/filipagalrao"><a href="https://www.facebook.com/filipagalrao">loading...</a></blockquote></div></div>
    </div>
}

<div class="container" style="padding-bottom: 50px">

    @*@Html.Partial("Slider", Model.Content.GetPropertyValue<string>("highlightArticles").Split(',').ToList())*@

    @Html.Partial("ArticleList", Model.Content.Parent.Descendants().Where(p => p.DocumentTypeAlias.Equals("Article") || p.DocumentTypeAlias.Equals("Note")).OrderByDescending(p => p.GetPropertyValue<DateTime>("contentDate")))

    @Html.Partial("InstagramFeed")
</div>
<div style="float: left;width: 15%">
    <div style="display: none" class="fb-page" data-href="https://www.facebook.com/filipagalrao" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><div class="fb-xfbml-parse-ignore"><blockquote cite="https://www.facebook.com/filipagalrao"><a href="https://www.facebook.com/filipagalrao">Filipa Galrão</a></blockquote></div></div>
</div>
