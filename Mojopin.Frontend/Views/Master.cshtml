@using Umbraco.Web
@using ClientDependency.Core.Mvc
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
    var facebookAppId = System.Configuration.ConfigurationManager.AppSettings["Facebook.AppId"];

    Html.RequiresCss("http://fonts.googleapis.com/css?family=Great+Vibes", 0);
    Html.RequiresCss("https://fonts.googleapis.com/css?family=Quicksand", 1);
    Html.RequiresCss("/Sources/css/bootstrap.min.css", 2);
    Html.RequiresCss("/Sources/css/clean-blog.min.css", 3);
    Html.RequiresCss("/Sources/css/Custom.min.css", 4);
    Html.RequiresCss("/Sources/css/font-awesome.min.css", 5);
    Html.RequiresCss("/Sources/css/search.css");


    Html.RequiresJs("/Sources/js/jquery-3.2.1.min.js", 0);
    Html.RequiresJs("/Sources/js/bootstrap.min.js", 1);
    Html.RequiresJs("/Sources/js/clean-blog.min.js", 2);
    Html.RequiresJs("/Sources/js/search.js");
    Html.RequiresJs("/Sources/js/main.min.js", 3);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="">

    <meta name="description" content="@Model.Content.GetPropertyValue("seoDescription")" />
    <meta name="keywords" content="@Model.Content.GetPropertyValue("seoKeywords")" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="mojopin.com" />
    <meta property="og:title" content="@Model.Content.GetPropertyValue("seoTitle")" />
    <meta property="og:url" content="@Model.Content.UrlAbsolute()" />

    <meta property="og:image" content="http://mojopin.pt/@Model.Content.GetPropertyValue("shareImage")" />

    <meta property="og:description" content="@Model.Content.GetPropertyValue("seoDescription")" />
    @if (Model.Content.DocumentTypeAlias.Equals("Homepage"))
    {
        <title>mojopin</title>
    }
    else
    {
        <title>mojopin || @Model.Content.Name.ToLower()</title>
    }

    <link rel="shortcut icon" href="/Sources/favicon.png">

    @Html.Raw(Html.RenderCssHere())
